{
  "name": "Unified GUI (Lite+U3)",
  "image": "mcr.microsoft.com/devcontainers/python:3.11-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },
  "remoteUser": "vscode",
  "postCreateCommand": "python -m pip install -U pip && pip install -r requirements.txt -r requirements-dev.txt && sudo apt-get update && sudo apt-get install -y libxkbcommon-x11-0 libxcb-cursor0 libgl1 libglib2.0-0 xvfb",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "GitHub.vscode-pull-request-github"
      ],
      "settings": {
        "remote.portsAttributes": { "3399": { "label": "Pylance", "onAutoForward": "ignore" } },
        "codespaces.defaultPortPublic": false,
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": false
      }
    }
  }
}
